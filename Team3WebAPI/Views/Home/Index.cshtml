@model Team3WebAPI.HomeVO

@{
    ViewBag.Title = "Main";
}



<div class="content-wrapper" style="margin-left:auto;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1 class="box-header">
            LSYK 에 오신 것을 환영 합니다 !
            <small>Version 2.0</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Info boxes -->
        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua"><i class="fa fa-battery-3"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">당월 작업 강도</span>
                        <span class="info-box-number">@Model.WorkRate.workrate<small>%(</small><small>@Model.WorkRate.workdate</small><small>/</small><small>@Model.WorkRate.totaldate</small><small>)</small> </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red"><i class="ion ion-ios-people-outline"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">
                            거래처 수
                            <span class="info-box-number">


                                @if (Model.CompanyData.sum - Model.CompanyCount[0].sum > 0)
                                {
                                    <small class="info-box-number" style="color:red">@Model.CompanyData.month <i class="fa fa-sort-up" style="color:red"></i></small>
                                }
                                else
                                {
                                    <small class="info-box-number" style="color:blue">@Model.CompanyData.month <i class="fa fa-sort-desc" style="color:blue"></i></small>
                                }
                                @Model.CompanyData.sum
                            </span>
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green"><i class="fa fa-truck"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">
                            전월 매출대비

                            @if (Model.SalesRateBool == true)
                            {
                                <small class="info-box-number" style="color:red">@Model.SalesRateToView <i class="fa fa-sort-up" style="color:red"></i></small>
                            }
                            else
                            {
                                <small class="info-box-number" style="color:blue">@Model.SalesRateToView <i class="fa fa-sort-desc" style="color:blue"></i></small>
                            }

                        </span>
                        <span class="info-box-number">@Model.SalesPrice </span>


                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-yellow"><i class="fa fa-user-plus"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">신입 채용 건수</span>
                        <span class="info-box-number">@Model.Userlist.Count members </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->


        <div class="row">
            <div class="col-md-12">
                <div class="box ">

                    <div class="box-header with-border col-md-6 ">

                        <h3 class="box-title">GOODEE TV</h3>
                        <a href="http://gdu.co.kr/main/main.html" target="_blank">Goodee Academy</a>.

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                        <div class="box-body">
                            <div class="embed-responsive embed-responsive-16by9">

                                <div class="video-container" style="text-align: center; margin-top: 25px;width:auto;height:auto;">
                                    <object type="text/html" data="//www.youtube.com/embed/OUdvbElk9z8"></object>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <table style="width:auto;">
                            <tr>

                                <td style="width:auto">
                                    <div class="box-body">
